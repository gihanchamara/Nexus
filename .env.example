# ─── Copy this file to .env and fill in values ──────────────────────────────
# NEVER commit .env to version control

# ─── MySQL ───────────────────────────────────────────────────────────────────
MYSQL_ROOT_PASSWORD=change_me_root
MYSQL_USER=nexus
MYSQL_PASSWORD=change_me_nexus
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DB=nexus

# ─── TimescaleDB ─────────────────────────────────────────────────────────────
TIMESCALE_USER=nexus_ts
TIMESCALE_PASSWORD=change_me_ts
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5432
TIMESCALE_DB=nexus_ts

# ─── Redis Streams ───────────────────────────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=change_me_redis
REDIS_DB=0

# ─── IBKR Connection ─────────────────────────────────────────────────────────
# Paper trading: TWS port 7497, IB Gateway port 4002
# Live trading:  TWS port 7496, IB Gateway port 4001
IBKR_HOST=127.0.0.1
IBKR_PORT=7497
IBKR_CLIENT_ID=1
IBKR_ACCOUNT=             # Your paper/live account ID (e.g. DU1234567)

# ─── Trading Mode ────────────────────────────────────────────────────────────
# PAPER | LIVE  — PAPER is always the safe default
NEXUS_TRADING_MODE=PAPER
# Set to 1 to immediately halt all live order submission
NEXUS_KILL_SWITCH=0

# ─── API ─────────────────────────────────────────────────────────────────────
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=change_me_jwt_secret_min_32_chars_long

# ─── Logging ─────────────────────────────────────────────────────────────────
LOG_LEVEL=INFO
