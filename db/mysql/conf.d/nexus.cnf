[mysqld]
# Performance for trading workloads
innodb_buffer_pool_size        = 256M
innodb_log_file_size           = 64M
innodb_flush_log_at_trx_commit = 1    # ACID: flush on every commit
sync_binlog                    = 1    # Durable binlog

# Connection
max_connections                = 100
wait_timeout                   = 600
interactive_timeout            = 600

# Charset
character-set-server           = utf8mb4
collation-server               = utf8mb4_unicode_ci

# Security
local_infile                   = 0
