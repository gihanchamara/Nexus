<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd">

    <changeSet id="002-credentials-create" author="nexus">
        <comment>
            Encrypted credential store. Stores only the AES-encrypted ciphertext.
            The encryption key lives in HashiCorp Vault or env-injected secret;
            NEVER stored here.
        </comment>

        <createTable tableName="credential">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="service_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="label" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <!-- AES-256-GCM encrypted ciphertext (base64) -->
            <column name="encrypted_secret" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <!-- Key reference in Vault/KMS â€” not the key itself -->
            <column name="vault_key_id" type="VARCHAR(255)"/>
            <column name="created_at" type="DATETIME" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="rotated_at" type="DATETIME"/>
        </createTable>

        <addUniqueConstraint
            tableName="credential"
            columnNames="service_name, label"
            constraintName="uq_credential_service_label"/>
    </changeSet>

</databaseChangeLog>
