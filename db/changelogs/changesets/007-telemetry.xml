<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd">

    <changeSet id="007-telemetry-create" author="nexus">
        <comment>
            Persisted telemetry events from all components.
            Hot path is Redis Streams; this is the durable archive (sampled or full).
        </comment>

        <createTable tableName="telemetry_event">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <!-- Redis stream message ID (e.g. 1716300000000-0) -->
            <column name="stream_id" type="VARCHAR(30)"/>
            <column name="event_id" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="component_id" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="component_type" type="ENUM(
                'INGESTION','STRATEGY','AI_MODEL',
                'RISK_MANAGER','ORDER_MANAGER',
                'PAPER_ENGINE','BACKTEST_ENGINE','SCHEDULER','SYSTEM'
            )">
                <constraints nullable="false"/>
            </column>
            <column name="channel" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="level" type="ENUM('DEBUG','INFO','WARN','ERROR')">
                <constraints nullable="false"/>
            </column>
            <column name="mode" type="ENUM('PAPER','LIVE','BACKTEST')">
                <constraints nullable="false"/>
            </column>
            <column name="session_id" type="INT"/>
            <!-- Component-specific payload -->
            <column name="payload" type="JSON"/>
            <column name="timestamp_utc" type="DATETIME(3)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="telemetry_event" indexName="idx_telemetry_component_ts">
            <column name="component_type"/>
            <column name="timestamp_utc"/>
        </createIndex>

        <createIndex tableName="telemetry_event" indexName="idx_telemetry_level_ts">
            <column name="level"/>
            <column name="timestamp_utc"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
