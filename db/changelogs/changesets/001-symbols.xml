<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd">

    <changeSet id="001-symbols-create" author="nexus">
        <comment>Tracked financial instruments. Mirrors ib_insync Contract fields.</comment>

        <createTable tableName="symbol">
            <column name="symbol" type="VARCHAR(20)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="sec_type" type="ENUM('STK','OPT','FUT','CASH','BOND','IND')">
                <constraints nullable="false"/>
            </column>
            <column name="exchange" type="VARCHAR(20)"/>
            <column name="primary_exchange" type="VARCHAR(20)"/>
            <column name="currency" type="VARCHAR(10)" defaultValue="USD">
                <constraints nullable="false"/>
            </column>
            <!-- IBKR contract identifier â€” populated after first resolution -->
            <column name="conid" type="BIGINT"/>
            <column name="active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="DATETIME" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="symbol" indexName="idx_symbol_sec_type">
            <column name="sec_type"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
